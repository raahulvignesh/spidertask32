<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/fab_margin">

    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/Date"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="26-08-1998"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/maintempcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/Date"
                android:layout_alignStart="@+id/Date"

                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="80dp"
                android:text="50"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/imageViewicon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/Date"
                android:layout_marginEnd="61dp"
                android:layout_marginRight="61dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/des1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewicon1"
                android:layout_marginLeft="230dp"
                android:text="TextView"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/Date"
                android:layout_alignStart="@+id/Date"
                android:layout_below="@+id/maintempcard"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="30dp"
                android:text="Average Humadity:"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8"
                android:layout_below="@+id/textView8"
                android:layout_marginTop="19dp"
                android:text="Maximum Temperature:"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView9"
                android:layout_alignStart="@+id/textView9"
                android:layout_below="@+id/textView9"
                android:layout_marginTop="23dp"
                android:text="Minimum Temperature:"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView12"
                android:layout_alignStart="@+id/textView12"
                android:layout_below="@+id/textView12"
                android:layout_marginTop="21dp"
                android:text="Average Wind speed:"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/avghumtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView9"
                android:layout_toRightOf="@+id/textView2"
                android:layout_marginLeft="40dp"
                android:text="TextView"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/maxitemptxtfor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="15dp"
                android:layout_alignBaseline="@+id/textView9"
                android:layout_alignBottom="@+id/textView9"
                android:layout_alignLeft="@+id/avghumtxt"
                android:layout_alignStart="@+id/avghumtxt" />

            <TextView
                android:id="@+id/minitemptxtfor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView12"
                android:layout_alignLeft="@+id/maxitemptxtfor"
                android:layout_alignStart="@+id/maxitemptxtfor"
                android:text="TextView"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/avgwindspetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="15dp"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_alignLeft="@+id/minitemptxtfor"
                android:layout_alignStart="@+id/minitemptxtfor" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>